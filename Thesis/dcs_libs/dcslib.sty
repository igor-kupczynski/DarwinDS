  \ifthenelse{#3=1\or#3=8}{\dcscmd{#2(#3)}}{%
  \ifthenelse{#3=5}{\dcspath{#2(#3)}}{%
  \ifthenelse{#3=2\or#3=3}{\dcscode{#2(#3)}}{%
  \dcsname{#2(#3)}}}}}

